x=0
y=0
z=0
def setup():    
    size(600,400)
    background(0,0,0)
    frameRate(24)
    rectMode(CENTER)
    textSize(25)
def mouseClicked():
    global x,y,z
    if mouseX>500 and mouseX<550 and mouseY>350 and mouseY<400 and x>0:
        x=x-1
        background(0,0,0)
        fill("#F7D10C")
        for i in range(x):
            ellipse(random(0,400),random(0,400),5,5)
    if mouseX>550 and mouseX<600 and mouseY>350 and mouseY<400:
        x=x+1
        background(0,0,0)
        fill("#F7D10C")
        for i in range(x):
            ellipse(random(0,400),random(0,400),5,5)
def draw():
    global x
    fill(0,255,50)
    rect(575,375,50,50)
    rect(525,375,50,50)
    line(575,395,575,355)
    line(505,375,545,375)
    line(555,375,595,375)
    fill(255,200,0)
