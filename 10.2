x=[]
y=[]
speed=0
def setup():
    size(1500,850)
    background(255)
    fill(255,0,0)
    noStroke()
    rectMode(CENTER)
def draw():
    global x,y,speed
    background(255)
    for i in range(len(x)):
        push()
        translate(x[i],y[i])
        rotate(radians(speed))
        rect(0,0,20,20)
        pop()
    speed+=5
def mouseClicked():
    if mouseButton == LEFT:
        x.append(mouseX)   
        y.append(mouseY) 
    if mouseButton == RIGHT and len(x) > 0:
        del x[len(x)-1]   
        del y[len(y)-1]
