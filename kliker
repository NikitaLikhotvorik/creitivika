x = 0
def setup():
    size(600,400)
    textSize(50)
    rectMode(CENTER)
    fill(255,0,0)
def draw():
    background(255,255,255)
    rect(300,200,40,40)
    text(x,100,100)
    if mousePressed:
        if mouseX > 280:
            if mouseX < 320:
                if mouseY > 180:
                    if mouseY < 220:
                        global x
                        x+=1
