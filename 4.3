x=['bacon','beef','chicken','ham','liver']
y=0
def setup():
    size(600,400)
    background(255,255,255)
    fill(255,0,0)
    textSize(40)
def mouseClicked():
    global y
    if mouseButton == LEFT and y > 0:
        y -= 1
    if mouseButton == RIGHT and y < 4:
        y += 1
def draw():
    global y
    background(255,255,255)
    for i in range(len(x)):
        if y == i:
            fill(255,255,0)
        else:
            fill(255,0,0)
        text(x[i],10,40*(i+1))
