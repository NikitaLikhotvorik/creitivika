steam

import Steamer as S
n=7
nn=n
x=300
y=200
def setup():
    rectMode(CENTER)
    size(600,400)
    background(255)
def draw():
    background(255)
    S.steamer(x,y,nn)
def keyPressed():
    global x,y,nn
    if keyCode == UP:
        y-=5
    elif keyCode == DOWN:
        y+=5
    elif keyCode == LEFT:
        x-=5
        nn=n
    elif keyCode == RIGHT:
        x+=5
        nn=-n
        
steamer

def steamer(x,y,n):
    rect(x,y,30,30)
    rect(x,y-27.5,15,25)
    triangle(x+15,y-15,x+15,y+15,x+45,y-15)
    triangle(x-15,y-15,x-15,y+15,x-45,y-15)
    circle(x,y,10)
    circle(x-22,y-5,10)
    circle(x+22,y-5,10)
    circle(x+n*2,y-40,10)
    circle(x+n*5,y-45,15)
